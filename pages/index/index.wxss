/* pages/index/index.wxss */
.space,.love_num,.love_info{
  display: flex;
}
.space a,.love_num a ,.love_info a{
  display: block;
  margin-right: 20px;
  background-image: linear-gradient(0deg,#fff,#f3f5f8);
  border: 2px solid #fff;
  box-shadow: 8px 8px 20px 0 rgba(55,99,170,.1);
  border-radius: 4px;
  box-sizing: border-box;
  -ms-flex: 1;
  flex: 1;
  width: 1px;
  max-width: none;
  height: auto;
  padding: 18px;
  margin: 10rpx;
  transition: all .3s linear;
  position: relative;
  pointer-events: auto;
  overflow: hidden;
}