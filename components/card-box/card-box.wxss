/* components/card-box/card-box.wxss */
.box_style{
  display: block;
  margin-right: 20px;
  background-image: linear-gradient(0deg,#fff,#f3f5f8);
  border: 2px solid #fff;
  box-shadow: 8px 8px 20px 0 rgba(55,99,170,.1);
  border-radius: 4px;
  box-sizing: border-box;
  max-width: none;
  height: auto;
  padding: 20rpx;
  margin: 10rpx;
  transition: all .3s linear;
  position: relative;
  pointer-events: auto;
  overflow: hidden;
}
